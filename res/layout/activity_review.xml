<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical">
    
    <include
        layout="@layout/include_titlebar"
        android:paddingTop="0dp" />

    <TextView
        android:id="@+id/requestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1" >

        <RadioGroup
            android:id="@+id/reradioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:visibility="visible" >
            
            <RadioButton
                android:id="@+id/reradioA"
                style="@style/radionbutton_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:tag="A"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/reradioB"
                style="@style/radionbutton_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:tag="B"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/reradioC"
                style="@style/radionbutton_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:tag="C"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/reradioD"
                style="@style/radionbutton_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:tag="D"
                android:textSize="13sp" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/recheckGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <CheckBox
                android:id="@+id/recA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/recB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/recC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/recD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:visibility="visible" >

        <TextView
            android:id="@+id/reanswer_key"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.07"
            android:text="B 考查代词。both两者都；neither表示两者的全部否定；none表三者及以上的全部否定；either表两者中选择其一。此处是表示两者的全部否定，故使用neither。句意：她曾在伦敦和曼彻斯特都生活过，但这两个地方她都不喜欢，她搬去了剑桥。"
            android:textColor="#ef5252"
            android:visibility="visible" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:paddingTop="0dp" >

        <ImageButton
            android:id="@+id/rebutton_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0"
            android:background="@drawable/previous" />

        <ImageButton
            android:id="@+id/rebutton_down"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="246dp"
            android:layout_weight="0"
            android:background="@drawable/next" />

"

    </LinearLayout>

</LinearLayout>