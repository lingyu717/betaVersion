<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="180dp"
    android:minHeight="150dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/coner_bg_white" >
    
    <TextView
        android:id="@+id/upDown_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:text="提示"
        android:textColor="#1ABDE6"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="#1ABDE6"
        android:layout_marginBottom="10dp"/>
    
    <TextView
        android:id="@+id/upDown_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="已经是最后一题了！！"
        android:textColor="#ef5252"
        android:textSize="20sp" />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="#1ABDE6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/upDown_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="确认"
            android:textColor="#1ABDE6" />

        </LinearLayout>
</LinearLayout>
