<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!--自定义对话框样式  -->
    <style name="dialog_custom" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style  name="radionbutton_a">
        <item name="android:button">@drawable/radiobtn_a</item>
    </style>
    
    <style  name="radionbutton_b">
        <item name="android:button">@drawable/radiobtn_b</item>
    </style>
    
    <style  name="radionbutton_c">
        <item name="android:button">@drawable/radiobtn_c</item>
    </style>
    
    <style  name="radionbutton_d">
        <item name="android:button">@drawable/radiobtn_d</item>
    </style>

</resources>
